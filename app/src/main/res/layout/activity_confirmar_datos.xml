<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding"
    tools:context=".ConfirmarDatosActivity">


    <TextView
        android:id="@+id/textView_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/confirmar_datos"
        android:textSize="@dimen/activity_title_size"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/activity_text_fields_size"
        tools:text="Lorena Hernandez Lopez"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/textView_FechaNacimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/activity_text_fields_size"
        tools:text="Fecha Nacimiento 12/21/1987"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/textView_Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/activity_text_fields_size"
        tools:text="Tel. 555553333"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/textView_Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/activity_text_fields_size"
        tools:text="Email: lorena@gmail.com"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/textView_Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/activity_text_fields_size"
        tools:text="Descripcion: Conoci a Lorena en el Restaurant de comida italiana"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/editar_datos"
        android:onClick="onClickEditarDatos"/>
</LinearLayout>